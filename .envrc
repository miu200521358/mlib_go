# direnv: td/tv/ti 共通スクリプト設定（JSON マッピング参照）。

# task-flow は C:\Codex\subsystem_repo_map.json を唯一の対応表として参照する。
export CODEX_SUBSYSTEM_REPO_MAP_FILE="$(expand_path ../../subsystem_repo_map.json)"
export CODEX_SUBPRODUCT="mlib"

# 共通スクリプト配置先を PATH 末尾へ追加する。
codex_scripts_dir="$(expand_path ../../scripts)"
case ":${PATH}:" in
  *":${codex_scripts_dir}:"*) ;;
  *) PATH="${PATH}:${codex_scripts_dir}" ;;
esac
