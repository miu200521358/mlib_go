{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "shell: delete pre debug exe",
			"type": "shell",
			"command": "${workspaceFolder}/.vscode/scripts/delete_pre_debug_exe.bat",
			"args": [
				"workspaceFolder=${workspaceFolder}",
			],
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
		},
		{
			"label": "go: mod tidy",
			"type": "shell",
			"command": "go mod tidy",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"dependsOn": [
				"shell: delete pre debug exe"
			]
		}
	]
}